{
    "name": "AWS Serverless Express",
    "id": "aws-serverless-express",
    "version": "1.0.9",
    "description": "Devcontainer configuration for scaffoldly/stack-aws-serverless-express",
    "options": {},
    "dependsOn": {},
    "installsAfter": [
        "ghcr.io/devcontainers/features/common-utils"
    ],
    "privileged": true,
    "containerEnv": {
        "LAMBDA_DOCKER_NETWORK": "bridge",
        "LOCALSTACK_VOLUME_DIR": "${containerWorkspaceFolder}/.cache"
    },
    "entrypoint": "supervisord",
    "onCreateCommand": {
        "log": "echo onCreateCommand || exit",
        "log-env": "env || exit"
    },
    "postStartCommand": {
        "log": "echo postStartCommand || exit",
        "log-env": "env || exit"
    },
    "postAttachCommand": {
        "log": "echo postAttachCommand || exit",
        "log-env": "env || exit"
    },
    "postCreateCommand": {
        "log": "echo postCreateCommand || exit",
        "log-env": "env || exit"
    },
    "updateContentCommand": {
        "log": "echo updateContentCommand || exit",
        "log-env": "env || exit"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "esbenp.prettier-vscode",
                "dbaeumer.vscode-eslint"
            ],
            "settings": {
                "editor.defaultFormatter": "esbenp.prettier-vscode",
                "editor.codeActionsOnSave": {
                    "source.fixAll.eslint": "always"
                },
                "[html]": {
                    "editor.defaultFormatter": "vscode.html-language-features"
                },
                "editor.formatOnSave": true,
                "eslint.lintTask.enable": true,
                "eslint.validate": [
                    "javascript",
                    "typescript"
                ],
                "git.autofetch": true,
                "task.allowAutomaticTasks": "on",
                "prettier.prettierPath": "${containerWorkspaceFolder}/node_modules/prettier",
                "terminal.integrated.scrollback": 100000,
                "typescript.tsdk": "${containerWorkspaceFolder}/node_modules/typescript/lib",
                "typescript.tsserver.maxTsServerMemory": 1024,
                "typescript.preferences.importModuleSpecifier": "shortest"
            }
        }
    }
}